---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { SiteHeader } from "@/components/SiteHeader";
import { SiteFooter } from "@/components/SiteFooter";
import { Button } from "@/components/ui/button";
import { makeJsonLd } from "@/lib/make-json-ld";
import type { WebPage } from "schema-dts";
import {
  Shield,
  Database,
  Lock,
  FileText,
  GitBranch,
  Terminal,
  Zap,
  CheckCircle,
  ArrowRight,
  Code,
  Eye,
  Key,
  Folder,
  Clock,
} from "lucide-react";
import { Code as CodeComponent } from "astro:components";

const date = new Date();
const json_ld = makeJsonLd<WebPage>({
  "@type": "WebPage",
  "@context": "https://schema.org",
  "@id": "https://sentinel.cyberpath-hq.com/",
  url: "https://sentinel.cyberpath-hq.com/",
  name: "Sentinel - Filesystem-Backed Document DBMS",
  description:
    "A document-based DBMS written in Rust that stores all data as files on disk. Every piece of data is inspectable, auditable, and compliant by design.",
  inLanguage: "en-US",
  author: "CyberPath <support@cyberpath-hq.com>",
  datePublished: `${date.getFullYear()}-${date.getMonth() + 1}-${date.getDate()}`,
  dateModified: `${date.getFullYear()}-${date.getMonth() + 1}-${date.getDate()}`,
  publisher: {
    "@type": "Organization",
    name: "CyberPath",
    email: "support@cyberpath-hq.com",
  },
});

const features = [
  {
    icon: Eye,
    title: "Native Auditability",
    description:
      "Every change is a file, every file is Git-versionable. Full transparency built into the architecture.",
  },
  {
    icon: Shield,
    title: "Compliance Ready",
    description: "GDPR, SOC 2, HIPAA, PCI-DSS support built-in. Your data is always forensic-friendly.",
  },
  {
    icon: Terminal,
    title: "Operational Simplicity",
    description: "Use standard UNIX tools: rsync for replication, tar for backups, grep for queries.",
  },
  {
    icon: Folder,
    title: "Zero Lock-In",
    description: "Pure JSON data, not trapped in proprietary formats. Migrate anywhere with standard tools.",
  },
  {
    icon: Lock,
    title: "Security First",
    description:
      "AES-256-GCM, XChaCha20-Poly1305, and Ascon-128 encryption. Ed25519 signatures for integrity. Blake3 hashing.",
  },
  {
    icon: Zap,
    title: "Edge & Offline First",
    description: "Works on any filesystem without a server. Perfect for disconnected environments.",
  },
];

const useCases = [
  { icon: FileText, title: "Audit Logs", description: "Every entry is a file, versioned with Git" },
  { icon: Key, title: "Certificate Management", description: "Secure, inspectable, with OS-level ACLs" },
  {
    icon: Database,
    title: "Compliance Rules",
    description: "GDPR right-to-delete is literally <code class='text-xs!'>rm file</code>",
  },
  { icon: Lock, title: "Key Management", description: "Keys stored as files with filesystem security" },
  { icon: Clock, title: "Regulatory Reporting", description: "All data is immediately forensic-friendly" },
  { icon: GitBranch, title: "Edge Devices", description: "No server required, works with Git sync" },
];

const codeExample = `use sentinel_dbms::{Store, SentinelError};
use serde_json::json;

#[tokio::main]
async fn main() -> Result<(), SentinelError> {
    // Create a store with encryption
    let store = Store::new("./data", Some("secret_passphrase")).await?;

    // Get a collection (creates directory if needed)
    let users = store.collection("users").await?;

    // Insert a document (creates JSON file with hash & signature)
    users.insert("user-123", json!({
        "name": "Alice",
        "email": "alice@example.com",
        "role": "admin"
    })).await?;

    // Retrieve the document
    let doc = users.get("user-123").await?;
    println!("Found: {:?}", doc);

    Ok(())
}`;
---

<BaseLayout
  JSON_LD={json_ld}
  seo={{
    title: "Sentinel - Filesystem-Backed Document DBMS | CyberPath",
    canonical: "https://sentinel.cyberpath-hq.com/",
    description:
      "A document-based DBMS written in Rust that stores all data as files on disk. Every piece of data is inspectable, auditable, and compliant by design.",
    openGraph: {
      url: "https://sentinel.cyberpath-hq.com/",
      title: "Sentinel - Filesystem-Backed Document DBMS",
      description: "Trust, transparency, and compliance over raw throughput. Your data, your files, your control.",
      site_name: "Sentinel",
    },
    twitter: {
      cardType: "summary_large_image",
      handle: "@cyberpath_hq",
      site: "@cyberpath_hq",
    },
  }}
>
  <SiteHeader client:load activePage="home" />

  <main>
    <!-- Hero Section -->
    <section class="relative overflow-hidden border-b border-border">
      <!-- Grid background -->
      <div class="absolute inset-0 grid-pattern opacity-50"></div>

      <!-- Gradient orb -->
      <div
        class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] rounded-full opacity-20"
        style="background: radial-gradient(circle, oklch(76.5% 0.177 163.223 / 40%) 0%, transparent 70%);"
      >
      </div>

      <div class="relative container mx-auto px-4 lg:px-8 py-24 lg:py-32">
        <div class="max-w-4xl mx-auto text-center">
          <div
            class="inline-flex items-center gap-2 px-4 py-2 mb-8 text-sm font-medium bg-primary/10 border border-primary/20 rounded-full text-primary"
          >
            <Shield className="h-4 w-4" />
            <span>Filesystem-Backed Document DBMS</span>
          </div>

          <h1 class="text-5xl lg:text-7xl font-bold tracking-tight mb-6">
            Your data as <span class="gradient-text">files</span>, not black boxes
          </h1>

          <p class="text-xl lg:text-2xl text-muted-foreground mb-10 max-w-2xl mx-auto leading-relaxed">
            A document database written in Rust where every piece of data is inspectable, auditable, and compliant by
            design. Trust and transparency over raw throughput.
          </p>

          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <a href="/docs/introduction">
              <Button size="lg" className="gap-2 text-base">
                Get Started
                <ArrowRight className="h-4 w-4" />
              </Button>
            </a>
            <a href="https://github.com/cyberpath-HQ/sentinel" target="_blank" rel="noopener">
              <Button variant="outline" size="lg" className="gap-2 text-base">
                <GitBranch className="h-4 w-4" />
                View on GitHub
              </Button>
            </a>
          </div>

          <!-- Stats -->
          <div class="mt-16 grid grid-cols-2 sm:grid-cols-4 gap-8">
            <div class="text-center">
              <div class="text-3xl font-bold text-primary mb-1">100%</div>
              <div class="text-sm text-muted-foreground">Transparent</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-primary mb-1">Zero</div>
              <div class="text-sm text-muted-foreground">Vendor Lock-in</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-primary mb-1">Git</div>
              <div class="text-sm text-muted-foreground">Native Versioning</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-primary mb-1">Rust</div>
              <div class="text-sm text-muted-foreground">Memory Safe</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Code Example Section -->
    <section class="py-20 lg:py-28 border-b border-border bg-card/30">
      <div class="container mx-auto px-4 lg:px-8">
        <div class="max-w-6xl mx-auto">
          <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div>
              <h2 class="text-3xl lg:text-4xl font-bold tracking-tight mb-6">
                Simple, async, and <span class="text-primary">intuitive</span>
              </h2>
              <p class="text-lg text-muted-foreground mb-8 leading-relaxed">
                Sentinel provides a clean, async API that feels natural for Rust developers. Create stores, manage
                collections, and work with documents using familiar patterns. Every document is automatically hashed and
                optionally signed for integrity verification.
              </p>
              <ul class="space-y-4">
                <li class="flex items-start gap-3">
                  <CheckCircle className="h-5 w-5 text-primary mt-0.5 shrink-0" />
                  <span class="text-muted-foreground">Full async/await support with Tokio</span>
                </li>
                <li class="flex items-start gap-3">
                  <CheckCircle className="h-5 w-5 text-primary mt-0.5 shrink-0" />
                  <span class="text-muted-foreground">Automatic BLAKE3 hashing for integrity</span>
                </li>
                <li class="flex items-start gap-3">
                  <CheckCircle className="h-5 w-5 text-primary mt-0.5 shrink-0" />
                  <span class="text-muted-foreground">Optional Ed25519 signatures with passphrase</span>
                </li>
                <li class="flex items-start gap-3">
                  <CheckCircle className="h-5 w-5 text-primary mt-0.5 shrink-0" />
                  <span class="text-muted-foreground">Pretty-printed JSON for easy inspection</span>
                </li>
              </ul>
            </div>
            <div class="relative">
              <div
                class="absolute -inset-4 bg-gradient-to-r from-primary/20 to-transparent rounded-2xl blur-xl opacity-50"
              >
              </div>
              <div class="relative rounded-xl border border-border bg-card p-1 overflow-x-auto text-sm">
                <CodeComponent lang="rust" code={codeExample} theme={"aurora-x"} />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-20 lg:py-28 border-b border-border">
      <div class="container mx-auto px-4 lg:px-8">
        <div class="max-w-4xl mx-auto text-center mb-16">
          <h2 class="text-3xl lg:text-4xl font-bold tracking-tight mb-4">
            Why choose <span class="text-primary">Sentinel</span>?
          </h2>
          <p class="text-lg text-muted-foreground">
            Modern databases prioritize speed. Sentinel prioritizes trust, transparency, and compliance.
          </p>
        </div>

        <div class="max-w-6xl mx-auto grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {
            features.map((feature) => (
              <div class="group relative p-6 rounded-xl border border-border bg-card/50 hover:bg-card transition-colors">
                <div class="flex items-center justify-center w-12 h-12 mb-4 rounded-lg bg-primary/10 border border-primary/20 group-hover:bg-primary/20 transition-colors">
                  <feature.icon className="h-6 w-6 text-primary" />
                </div>
                <h3 class="text-lg font-semibold mb-2">{feature.title}</h3>
                <p class="text-sm text-muted-foreground leading-relaxed">{feature.description}</p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Use Cases Section -->
    <section class="py-20 lg:py-28 border-b border-border bg-card/30">
      <div class="container mx-auto px-4 lg:px-8">
        <div class="max-w-4xl mx-auto text-center mb-16">
          <h2 class="text-3xl lg:text-4xl font-bold tracking-tight mb-4">
            Perfect for <span class="text-primary">critical data</span>
          </h2>
          <p class="text-lg text-muted-foreground">
            Sentinel shines in environments where auditability and compliance are non-negotiable.
          </p>
        </div>

        <div class="max-w-4xl mx-auto grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
          {
            useCases.map((useCase) => (
              <div class="flex items-start gap-4 p-4 rounded-lg border border-border bg-card/50 hover:bg-card transition-colors">
                <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-primary/10 border border-primary/20 shrink-0">
                  <useCase.icon className="h-5 w-5 text-primary" />
                </div>
                <div>
                  <h3 class="font-semibold mb-1">{useCase.title}</h3>
                  <p class="text-sm text-muted-foreground" set:html={useCase.description} />
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Data Structure Section -->
    <section class="py-20 lg:py-28 border-b border-border">
      <div class="container mx-auto px-4 lg:px-8">
        <div class="max-w-6xl mx-auto">
          <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div>
              <h2 class="text-3xl lg:text-4xl font-bold tracking-tight mb-6">
                Data you can <span class="text-primary">actually see</span>
              </h2>
              <p class="text-lg text-muted-foreground mb-6 leading-relaxed">
                Every document is stored as a pretty-printed JSON file. No binary blobs, no proprietary formatsâ€”just
                plain text that you can inspect with `cat`, edit with any text editor, and version with Git.
              </p>
              <p class="text-lg text-muted-foreground mb-8 leading-relaxed">
                Each document includes metadata for versioning, timestamps, cryptographic hashes, and optional
                signatures. You always know what changed, when, and can verify integrity at any time.
              </p>
              <a href="/docs/document">
                <Button variant="outline" className="gap-2">
                  Learn about documents
                  <ArrowRight className="h-4 w-4" />
                </Button>
              </a>
            </div>
            <div class="relative">
              <div class="rounded-xl border border-border bg-card p-1 overflow-x-auto text-sm">
                <CodeComponent
                  lang={`json5`}
                  theme={`aurora-x`}
                  code={`{
  "id": "user-123",
  "version": 1,
  "created_at": "2026-01-15T12:00:00Z",
  "updated_at": "2026-01-15T12:00:00Z",
  "hash": "a1b2c3d4e5f6...",
  "signature": "ed25519:...",
  "data": {
    "name": "Alice",
    "email": "alice@example.com",
    "role": "admin"
  }
}`}
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 lg:py-28">
      <div class="container mx-auto px-4 lg:px-8">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl lg:text-4xl font-bold tracking-tight mb-6">
            Ready to make your data <span class="text-primary">transparent</span>?
          </h2>
          <p class="text-lg text-muted-foreground mb-10">
            Get started with Sentinel in minutes. Add it to your Rust project and start storing data as inspectable,
            auditable files.
          </p>
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <a href="/docs/installation">
              <Button className="gap-2 text-base" size={"lg"}>
                Installation Guide
                <ArrowRight className="h-4 w-4" />
              </Button>
            </a>
            <a href="/docs/quick-start">
              <Button variant="outline" className="gap-2 text-base" size={"lg"}> Quick Start Tutorial </Button>
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <SiteFooter client:load />
</BaseLayout>
