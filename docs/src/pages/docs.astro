---
import Layout from "../layouts/Layout.astro";
import { Header } from "@/components/Header";
import { Footer } from "@/components/Footer";
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import CVSSVersionsTabs from "@/components/CVSSVersionsTabs";
import FAQAccordion from "@/components/FAQAccordion";
import BackToTopButton from "@/components/BackToTopButton";
import { makeJsonLd } from "@/lib/make-json-ld";
import type { WebPage } from "schema-dts";

const date = new Date();
const json_ld = makeJsonLd<WebPage>({
  "@type": "WebPage",
  "@context": "https://schema.org",
  "@id": "https://quant.cyberpath-hq.com/docs",
  url: "https://quant.cyberpath-hq.com/docs",
  name: "Documentation - Quant Nextgen CVSS Calculator",
  description:
    "Complete guide to Quant Nextgen CVSS Calculator. Learn how to use CVSS v4.0, v3.1, v3.0, and v2.0 for vulnerability scoring, export results, and understand metrics.",
  inLanguage: "en-US",
  author: "CyberPath <support@cyberpath-hq.com>",
  image: {
    "@type": "ImageObject",
    url: "https://quant.cyberpath-hq.com/og-image.svg",
    width: "1200",
    height: "630",
    description: "Documentation - Quant Nextgen CVSS Calculator",
  },
  mainEntityOfPage: {
    "@type": "WebPage",
    "@id": "https://quant.cyberpath-hq.com/docs",
  },
  datePublished: `${date.getFullYear()}-${date.getMonth() + 1}-${date.getDate()}`,
  dateModified: `${date.getFullYear()}-${date.getMonth() + 1}-${date.getDate()}`,
  publisher: {
    "@type": "Person",
    name: "CyberPath",
    email: "support@cyberpath-hq.com",
  },
});

const seoProps = {
  title: "Documentation - Quant Nextgen CVSS Calculator",
  canonical: "https://quant.cyberpath-hq.com/docs",
  description:
    "Complete guide to Quant Nextgen CVSS Calculator. Learn how to use CVSS v4.0, v3.1, v3.0, and v2.0 for vulnerability scoring, export results, and understand metrics.",
  openGraph: {
    url: "https://quant.cyberpath-hq.com/docs",
    title: "Documentation - Quant Nextgen CVSS Calculator",
    description: "Complete guide to Quant Nextgen CVSS Calculator and CVSS vulnerability scoring.",
    site_name: "Quant",
    images: [
      {
        url: "https://quant.cyberpath-hq.com/og-image.svg",
        width: 1200,
        height: 630,
        alt: "Documentation - Quant Nextgen CVSS Calculator",
      },
    ],
  },
  additionalMetaTags: [
    {
      name: "keywords",
      content:
        "CVSS, vulnerability scoring, security assessment, CVSS v4.0, CVSS v3.1, nextgen CVSS calculator, cybersecurity, documentation",
    },
  ],
  twitter: {
    cardType: "summary_large_image",
    handle: "@cyberpath_hq",
    site: "@cyberpath_hq",
  },
};
---

<Layout JSON_LD={json_ld} seo={seoProps}>
  <Header client:load activePage="documentation" />
  <main class="w-full min-h-screen bg-background text-foreground/90">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-20">
      <!-- Hero Section -->
      <div class="mx-auto max-w-4xl space-y-8">
        <!-- Page Header -->
        <div class="space-y-4">
          <div class="flex items-center gap-3">
            <h1
              class="text-5xl md:text-6xl font-bold tracking-tight bg-linear-to-r from-foreground to-muted-foreground bg-clip-text text-transparent"
            >
              Documentation
            </h1>
          </div>
          <p class="text-xl text-muted-foreground max-w-2xl">
            Master Quant's powerful CVSS scoring capabilities. Learn how to accurately assess vulnerability severity
            across all CVSS versions with our comprehensive guide.
          </p>
        </div>

        <!-- Quick Navigation -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
          <a
            href="#getting-started"
            class="p-4 rounded-lg border border-border bg-card hover:bg-accent transition-colors"
          >
            <div class="text-sm font-semibold">Getting Started</div>
            <div class="text-xs text-muted-foreground">Get up and running</div>
          </a>
          <a
            href="#cvss-versions"
            class="p-4 rounded-lg border border-border bg-card hover:bg-accent transition-colors"
          >
            <div class="text-sm font-semibold">CVSS Versions</div>
            <div class="text-xs text-muted-foreground">Understand each version</div>
          </a>
          <a href="#features" class="p-4 rounded-lg border border-border bg-card hover:bg-accent transition-colors">
            <div class="text-sm font-semibold">Features</div>
            <div class="text-xs text-muted-foreground">Explore capabilities</div>
          </a>
          <a href="#faq" class="p-4 rounded-lg border border-border bg-card hover:bg-accent transition-colors">
            <div class="text-sm font-semibold">FAQ</div>
            <div class="text-xs text-muted-foreground">Common questions</div>
          </a>
        </div>
      </div>

      <!-- Main Content -->
      <div class="mx-auto max-w-4xl mt-16 space-y-12">
        <!-- Getting Started Section -->
        <section id="getting-started" class="space-y-6">
          <div class="space-y-2">
            <h2 class="text-4xl font-bold tracking-tight">Getting Started</h2>
            <p class="text-muted-foreground text-lg">
              Start scoring vulnerabilities in minutes with Quant's intuitive interface.
            </p>
          </div>

          <Card className="border border-border">
            <CardHeader>
              <CardTitle className="text-xl">How to Use Quant</CardTitle>
            </CardHeader>
            <CardContent>
              <ol class="space-y-4">
                <li class="flex gap-4">
                  <div
                    class="shrink-0 w-8 h-8 rounded-full bg-primary text-primary-foreground flex items-center justify-center font-semibold text-sm"
                  >
                    1
                  </div>
                  <div>
                    <h4 class="font-semibold mb-1">Select a CVSS Version</h4>
                    <p class="text-sm text-muted-foreground">
                      Choose from v4.0 (latest), v3.1, v3.0, or v2.0 using the tabs at the top of the calculator.
                    </p>
                  </div>
                </li>
                <li class="flex gap-4">
                  <div
                    class="shrink-0 w-8 h-8 rounded-full bg-primary text-primary-foreground flex items-center justify-center font-semibold text-sm"
                  >
                    2
                  </div>
                  <div>
                    <h4 class="font-semibold mb-1">Configure Metrics</h4>
                    <p class="text-sm text-muted-foreground">
                      Select values for each metric group: Base (required), Temporal/Threat, Environmental, and
                      Supplemental (v4.0 only).
                    </p>
                  </div>
                </li>
                <li class="flex gap-4">
                  <div
                    class="shrink-0 w-8 h-8 rounded-full bg-primary text-primary-foreground flex items-center justify-center font-semibold text-sm"
                  >
                    3
                  </div>
                  <div>
                    <h4 class="font-semibold mb-1">Watch Real-Time Updates</h4>
                    <p class="text-sm text-muted-foreground">
                      See your CVSS score update instantly as you select values, displayed prominently in the score
                      card.
                    </p>
                  </div>
                </li>
                <li class="flex gap-4">
                  <div
                    class="shrink-0 w-8 h-8 rounded-full bg-primary text-primary-foreground flex items-center justify-center font-semibold text-sm"
                  >
                    4
                  </div>
                  <div>
                    <h4 class="font-semibold mb-1">Export & Share</h4>
                    <p class="text-sm text-muted-foreground">
                      Copy the vector string, generate a shareable link, get embeddable HTML code, or save to the Score
                      Manager.
                    </p>
                  </div>
                </li>
              </ol>
            </CardContent>
          </Card>
        </section>

        <!-- CVSS Versions Section -->
        <section id="cvss-versions" class="space-y-6 scroll-mt-20">
          <div class="space-y-2">
            <h2 class="text-4xl font-bold tracking-tight">CVSS Versions</h2>
            <p class="text-muted-foreground text-lg">
              Understand the differences between CVSS versions and when to use each one.
            </p>
          </div>

          <CVSSVersionsTabs client:only />
        </section>

        <!-- Features Section -->
        <section id="features" class="space-y-6 scroll-mt-20">
          <div class="space-y-2">
            <h2 class="text-4xl font-bold tracking-tight">Advanced Features</h2>
            <p class="text-muted-foreground text-lg">
              Discover what makes Quant the most powerful nextgen CVSS calculator.
            </p>
          </div>

          <div class="grid gap-6 md:grid-cols-2">
            <Card>
              <CardHeader>
                <CardTitle className="text-lg">Real-Time Scoring</CardTitle>
              </CardHeader>
              <CardContent className="text-sm text-muted-foreground space-y-2">
                <p>
                  Watch your CVSS score update instantly as you adjust metrics. The score card displays current
                  severity, rating, and vector string in real-time.
                </p>
              </CardContent>
            </Card>

            <Card>
              <CardHeader>
                <CardTitle className="text-lg">Multi-Format Export & Sharing</CardTitle>
              </CardHeader>
              <CardContent className="text-sm text-muted-foreground space-y-2">
                <ul class="space-y-1 list-disc list-inside">
                  <li><strong>Copy Vector:</strong> CVSS vector string for documentation</li>
                  <li><strong>Share Link:</strong> Pre-configured assessment URL</li>
                  <li><strong>Embeddable Code:</strong> HTML snippet to embed score cards on websites</li>
                  <li>
                    <strong>Save to Manager:</strong> Store assessments in the Score Manager for later and more advanced use
                  </li>
                </ul>
              </CardContent>
            </Card>

            <Card>
              <CardHeader>
                <CardTitle className="text-lg">Score Management & Analytics</CardTitle>
              </CardHeader>
              <CardContent className="text-sm text-muted-foreground space-y-2">
                <p>
                  Save calculated scores to your browser. Sort, filter, compare, edit, delete, and restore previous
                  assessments with ease.
                </p>
                <ul class="space-y-1 mt-3 list-disc list-inside">
                  <li><strong>Side-by-Side Comparison:</strong> Compare multiple scores to identify differences</li>
                  <li><strong>Interactive Charts:</strong> Generate severity distribution and analytics charts</li>
                  <li><strong>Chart Export:</strong> Export charts as PNG images</li>
                  <li><strong>Import/Export History:</strong> Backup and restore your score collection</li>
                </ul>
              </CardContent>
            </Card>

            <Card>
              <CardHeader>
                <CardTitle className="text-lg">Visual Analytics & Embedding</CardTitle>
              </CardHeader>
              <CardContent className="text-sm text-muted-foreground space-y-2">
                <p>
                  Generate interactive charts showing severity distribution, metric impact analysis, and comparative
                  scoring across versions.
                </p>
                <ul class="space-y-1 mt-3 list-disc list-inside">
                  <li><strong>Chart Export:</strong> Download charts as PNG images</li>
                  <li><strong>Embeddable Charts:</strong> Generate HTML code to embed charts on websites</li>
                  <li><strong>Interactive Controls:</strong> Customize chart appearance and settings</li>
                  <li><strong>Multiple Chart Types:</strong> Bar charts and donut charts available</li>
                </ul>
              </CardContent>
            </Card>

            <Card>
              <CardHeader>
                <CardTitle className="text-lg">URL Vector Loading</CardTitle>
              </CardHeader>
              <CardContent className="text-sm text-muted-foreground space-y-2">
                <p>
                  Share assessments via URL with pre-configured metrics. Anyone can open the link to view your exact
                  assessment or continue editing.
                </p>
                <code class="text-xs bg-muted p-2 rounded block mt-2 overflow-x-auto"
                  >/?vector=CVSS:4.0/AV:N/AC:L/...</code
                >
              </CardContent>
            </Card>

            <Card>
              <CardHeader>
                <CardTitle className="text-lg">Offline Capability</CardTitle>
              </CardHeader>
              <CardContent className="text-sm text-muted-foreground space-y-2">
                <p>
                  Works completely offline with no internet required. All calculations happen in your browser, no data
                  is ever sent to our servers.
                </p>
              </CardContent>
            </Card>

            <Card>
              <CardHeader>
                <CardTitle className="text-lg">Dark & Light Modes</CardTitle>
              </CardHeader>
              <CardContent className="text-sm text-muted-foreground space-y-2">
                <p>
                  Seamless theme switching for comfortable use in any environment. Respects system preferences and
                  remembers your choice.
                </p>
              </CardContent>
            </Card>

            <Card>
              <CardHeader>
                <CardTitle className="text-lg">Import/Export History</CardTitle>
              </CardHeader>
              <CardContent className="text-sm text-muted-foreground space-y-2">
                <p>
                  Export your complete assessment history as JSON and import it on other devices or browsers. Backup and
                  restore your work easily.
                </p>
              </CardContent>
            </Card>

            <Card>
              <CardHeader>
                <CardTitle className="text-lg">Responsive Design</CardTitle>
              </CardHeader>
              <CardContent className="text-sm text-muted-foreground space-y-2">
                <p>
                  Perfect experience on desktop, tablet, and mobile devices. Optimized UI for all screen sizes with
                  touch-friendly controls.
                </p>
              </CardContent>
            </Card>

            <Card>
              <CardHeader>
                <CardTitle className="text-lg">Detailed Metrics</CardTitle>
              </CardHeader>
              <CardContent className="text-sm text-muted-foreground space-y-2">
                <p>
                  In-context help explaining each metric, its implications, and scoring guidance. Understand the impact
                  of every selection.
                </p>
              </CardContent>
            </Card>

            <Card>
              <CardHeader>
                <CardTitle className="text-lg">Privacy First</CardTitle>
              </CardHeader>
              <CardContent className="text-sm text-muted-foreground space-y-2">
                <p>
                  Client-side only processing. No account required. Zero data collection. Your vulnerability assessments
                  remain completely private.
                </p>
              </CardContent>
            </Card>
          </div>
        </section>

        <!-- Severity Ratings Section -->
        <section class="space-y-6">
          <div class="space-y-2">
            <h2 class="text-4xl font-bold tracking-tight">Severity Ratings</h2>
            <p class="text-muted-foreground text-lg">How CVSS scores map to severity levels.</p>
          </div>

          <Card>
            <CardHeader>
              <CardTitle>CVSS v4.0, v3.1, v3.0</CardTitle>
              <CardDescription>Five-level severity scale</CardDescription>
            </CardHeader>
            <CardContent>
              <div class="grid gap-4">
                <div class="flex items-center justify-between p-4 rounded-lg border">
                  <div>
                    <p class="font-semibold">None</p>
                    <p class="text-sm text-muted-foreground">No vulnerability</p>
                  </div>
                  <Badge className="bg-[#87CEEB] text-white">0.0</Badge>
                </div>
                <div class="flex items-center justify-between p-4 rounded-lg border">
                  <div>
                    <p class="font-semibold">Low</p>
                    <p class="text-sm text-muted-foreground">Minimal impact</p>
                  </div>
                  <Badge className="bg-[#32CD32] text-white">0.1 - 3.9</Badge>
                </div>
                <div class="flex items-center justify-between p-4 rounded-lg border">
                  <div>
                    <p class="font-semibold">Medium</p>
                    <p class="text-sm text-muted-foreground">Moderate risk</p>
                  </div>
                  <Badge className="bg-[#FFD700] text-black">4.0 - 6.9</Badge>
                </div>
                <div class="flex items-center justify-between p-4 rounded-lg border">
                  <div>
                    <p class="font-semibold">High</p>
                    <p class="text-sm text-muted-foreground">Significant risk</p>
                  </div>
                  <Badge className="bg-[#FF6347] text-white">7.0 - 8.9</Badge>
                </div>
                <div class="flex items-center justify-between p-4 rounded-lg border">
                  <div>
                    <p class="font-semibold">Critical</p>
                    <p class="text-sm text-muted-foreground">Urgent action required</p>
                  </div>
                  <Badge className="bg-[#8A2BE2] text-white">9.0 - 10.0</Badge>
                </div>
              </div>
            </CardContent>
          </Card>

          <Card>
            <CardHeader>
              <CardTitle>CVSS v2.0</CardTitle>
              <CardDescription>Legacy three-level scale</CardDescription>
            </CardHeader>
            <CardContent>
              <div class="grid gap-4">
                <div class="flex items-center justify-between p-4 rounded-lg border">
                  <div>
                    <p class="font-semibold">Low</p>
                    <p class="text-sm text-muted-foreground">Minor vulnerability</p>
                  </div>
                  <Badge className="bg-[#32CD32] text-white">0.0 - 3.9</Badge>
                </div>
                <div class="flex items-center justify-between p-4 rounded-lg border">
                  <div>
                    <p class="font-semibold">Medium</p>
                    <p class="text-sm text-muted-foreground">Moderate impact</p>
                  </div>
                  <Badge className="bg-[#FFD700] text-black">4.0 - 6.9</Badge>
                </div>
                <div class="flex items-center justify-between p-4 rounded-lg border">
                  <div>
                    <p class="font-semibold">High</p>
                    <p class="text-sm text-muted-foreground">Severe vulnerability</p>
                  </div>
                  <Badge className="bg-[#FF6347] text-white">7.0 - 10.0</Badge>
                </div>
              </div>
            </CardContent>
          </Card>
        </section>

        <!-- FAQ Section -->
        <section id="faq" class="space-y-6 scroll-mt-20">
          <div class="space-y-2">
            <h2 class="text-4xl font-bold tracking-tight">Frequently Asked Questions</h2>
            <p class="text-muted-foreground text-lg">Quick answers to common questions about Quant and CVSS.</p>
          </div>

          <FAQAccordion client:only />
        </section>
      </div>

      <!-- Resources Section -->
      <section class="space-y-6 mx-auto max-w-4xl mt-16">
        <div class="space-y-2">
          <h2 class="text-4xl font-bold tracking-tight">Official Resources</h2>
          <p class="text-muted-foreground text-lg">Learn more about CVSS from the official FIRST.org sources.</p>
        </div>

        <Card>
          <CardHeader>
            <CardTitle>FIRST.org CVSS Specifications</CardTitle>
            <CardDescription>Official documentation and references</CardDescription>
          </CardHeader>
          <CardContent>
            <div class="grid gap-4 md:grid-cols-2">
              <a
                href="https://www.first.org/cvss/v4-0/"
                target="_blank"
                rel="noopener noreferrer"
                class="group p-4 rounded-lg border border-border hover:bg-accent transition-colors"
              >
                <div class="font-semibold group-hover:text-primary transition-colors">CVSS v4.0 Resources</div>
                <div class="text-sm text-muted-foreground">Latest specification and documentation</div>
              </a>
              <a
                href="https://www.first.org/cvss/v3-1/"
                target="_blank"
                rel="noopener noreferrer"
                class="group p-4 rounded-lg border border-border hover:bg-accent transition-colors"
              >
                <div class="font-semibold group-hover:text-primary transition-colors">CVSS v3.1 Resources</div>
                <div class="text-sm text-muted-foreground">Specification and guidance documents</div>
              </a>
              <a
                href="https://www.first.org/cvss/v3-0/"
                target="_blank"
                rel="noopener noreferrer"
                class="group p-4 rounded-lg border border-border hover:bg-accent transition-colors"
              >
                <div class="font-semibold group-hover:text-primary transition-colors">CVSS v3.0 Resources</div>
                <div class="text-sm text-muted-foreground">Original v3 specification documents</div>
              </a>
              <a
                href="https://www.first.org/cvss/v2/"
                target="_blank"
                rel="noopener noreferrer"
                class="group p-4 rounded-lg border border-border hover:bg-accent transition-colors"
              >
                <div class="font-semibold group-hover:text-primary transition-colors">CVSS v2.0 Resources</div>
                <div class="text-sm text-muted-foreground">Legacy version complete guide</div>
              </a>
              <a
                href="https://www.first.org/cvss/examples"
                target="_blank"
                rel="noopener noreferrer"
                class="group p-4 rounded-lg border border-border hover:bg-accent transition-colors"
              >
                <div class="font-semibold group-hover:text-primary transition-colors">CVSS Scoring Examples</div>
                <div class="text-sm text-muted-foreground">Real-world vulnerability assessments</div>
              </a>
              <a
                href="https://www.first.org/cvss/"
                target="_blank"
                rel="noopener noreferrer"
                class="group p-4 rounded-lg border border-border hover:bg-accent transition-colors"
              >
                <div class="font-semibold group-hover:text-primary transition-colors">FIRST.org CVSS Home</div>
                <div class="text-sm text-muted-foreground">Official FIRST.org CVSS information</div>
              </a>
            </div>
          </CardContent>
        </Card>
      </section>
    </div>
  </main>
  <BackToTopButton client:load />
  <Footer />
</Layout>
