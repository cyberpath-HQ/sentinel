{
  "name": "@cyberpath/sentinel",
  "version": "2.0.1",
  "description": "JavaScript/TypeScript bindings for Cyberpath Sentinel DBMS - works in Node.js and browsers",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "napi build --release",
    "build:debug": "napi build",
    "build:wasm": "wasm-pack build --target web --out-dir pkg",
    "build:wasm:node": "wasm-pack build --target nodejs --out-dir pkg-node",
    "build:all": "npm run build && npm run build:wasm",
    "bundle": "rollup -c rollup.config.js",
    "test": "ava",
    "prepublishOnly": "npm run build && npm run build:wasm && npm run bundle",
    "lint": "eslint . --ext .js,.ts",
    "fmt": "prettier --write ."
  },
  "keywords": [
    "database",
    "dbms",
    "document",
    "json",
    "filesystem",
    "rust",
    "wasm",
    "webassembly",
    "node",
    "browser"
  ],
  "author": "Emanuele (Ebalo) Balsamo <emanuele.balsamo@cyberpath-hq.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cyberpath-HQ/sentinel"
  },
  "engines": {
    "node": ">= 16"
  },
  "napi": {
    "binaryName": "sentinel"
  },
  "peerDependencies": {
    "@cyberpath/sentinel-wasm": "^2.0.1"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.16.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@types/node": "^20.0.0",
    "ava": "^5.0.0",
    "rollup": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
